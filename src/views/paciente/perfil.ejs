<html lang="es">
<!-- Vista para ver el perfil del paciente -->
    <head>
        <meta charset="UTF-8">
        <title>Perfil</title>
        <% include ../layouts/header %>
        <style type="text/css">
            .legend {
                    font-family: 'Arial', sans-serif;
                    fill: #333333;
            }
            .liquidFillGaugeText { font-family: Helvetica; font-weight: bold; }
        </style>
        <script src="/public/common/js/bootstrap/datepicker/bootstrap-datepicker.js"></script>
        <script src="/public/common/js/bootstrap/datepicker/bootstrap-datepicker.es.min.js"></script>
        <script src="/public/common/js/d3/d3.min.js"></script>
    </head>

    <body class="bg-light text-dark">
        <% include ../layouts/nav %>
        <% include ../layouts/toast %>
        <% include ../layouts/title %>
        <div class="container">
            <div class="row m-3" >
                <div class="col-12">
                    <div class="card bg-principal">
                        <div class="card-header">
                            <% if (locals.role == locals.roles["ROLE_PACIENTE"]) { %>
                                <div class="col-sm-6 col-md-12">
                                    <h3><b class="text-accent"><span id="paciente_actual" class="text-dark"></span></b></h3>
                                </div>
                            <% } else {%>
                            <div class="row">
                                <div class="col-8">
                                    <h3><b class="text-accent">Paciente actual: </b><span id="paciente_actual" class="text-dark">No has seleccionado a un paciente</span></h3>
                                </div>
                                <div class="col-1">
                                    <a class="btn btn-principal btn-lg" href="/paciente/editar/">Editar</a>
                                </div>
                                <div class="col-1">
                                    <a class="btn btn-principal btn-lg" href="/paciente/notas/">Notas</a>
                                </div>
                                <div class="col-1">
                                    <a class="btn btn-principal btn-lg" href="/paciente/sesiones/">Sesiones</a>
                                </div>
                            </div>
                            <% } %>
                        </div>

                        <div class="card-body">
                            <div class="row">
                                <div class="col-12">
                                    <h3 class="text-accent">Edad: <span class="text-dark" id="edad"></span></h3>
                                </div>
                            </div>

                            <div class="row text-center">
                                <div class="col-1"></div>
                                <div class="col-2 text-center">
                                    <label for="orientacion">Orientación</label>
                                    <svg id="orientacion" width="100%" height="150"></svg>
                                </div>
                                <div class="col-2 text-center">
                                    <label for="lenguaje">Lenguaje</label>
                                    <svg id="lenguaje" width="100%" height="150"></svg>
                                </div>
                                <div class="col-2 text-center">
                                    <label for="praxias">Praxias</label>
                                    <svg id="praxias" width="100%" height="150"></svg>
                                </div>
                                <div class="col-2 text-center">
                                    <label for="memoria">Memoria</label>
                                    <svg id="memoria" width="100%" height="150"></svg>
                                </div>
                                <div class="col-2 text-center">
                                    <label for="calculo">Cálculo</label>
                                    <svg id="calculo" width="100%" height="150"></svg>
                                </div>
                            </div>

                        </div>

                        <div class="card-footer">
                            <div class="row justify-content-center">
                                 <a class="btn btn-principal w-50 text-center btn-lg" href="/juegos/">Jugar</a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

        </div>

        <script type="text/javascript" src="/public/js/user/liquidFillGauge.js"></script>
        <script type="text/javascript" src="/public/js/user/perfil.js"></script>
        <script type="text/javascript" src="/public/js/user/show.js"></script>
    </body>
</html>
