<html lang="es">
    <!-- Vista para agregar un paciente -->
    <head>
         <meta charset="UTF-8"> 
         <title>Agregar Paciente</title>

        <% include ../layouts/header %>

    </head>

    <body class="bg-light text-dark">
        <% include ../layouts/nav %>
        <script src="/public/common/js/bootstrap/datepicker/bootstrap-datepicker.js"></script>
        <script src="/public/common/js/bootstrap/datepicker/bootstrap-datepicker.es.min.js"></script>

        <% include ../layouts/title %>
        <div class="container">
            
            <div class="row" style="margin-top: 20px">
                <div class="col-12">
                    <div class="card bg-principal text-accent">
                        <div class="card-header">
                            <div class="row">
                                <div class="col-2">
                                    <a class="btn btn-principal btn-lg" href="/">Regresar</a>
                                </div>
                                <div class="col-8 text-center">
                                    <h3>Agregar Paciente</h3>
                                </div>
                            </div>
                        </div>

                        <div class="card-body">
                            <div class="row">
                                <div class="col-12">
                                    <form class="form" id="target" method="POST" enctype='application/json' action="/paciente/agregar">

                                    <div class="form-group">
                                      <label for="noExpediente">NÃºmero de expediente</label>
                                      <input class="form-control" id="noExpediente" type="text" name="data[noExpediente]" required minlength="2">
                                    </div>

                                    <div class="form-group">
                                      <label for="nombre">Nombre</label>
                                      <input class="form-control" id="nombre" type="text" name="data[nombre]" required minlength="2">
                                    </div>

                                    <div class="form-group">
                                      <label for="aPaterno">Apellido Paterno</label>
                                      <input class="form-control" id="aPaterno" type="text" name="data[aPaterno]" required minlength="2">
                                    </div>

                                    <div class="form-group">
                                      <label for="aMaterno">Apellido Materno</label>
                                      <input class="form-control" id="aMaterno" type="text" name="data[aMaterno]" required minlength="2">
                                    </div>

                                    <div class="form-group">
                                      <label for="datepicker">Fecha de Nacimiento</label>
                                      <input id="datepicker" class="form-control" type="text" name="data[fechaNacimiento]" required>
                                    </div>
                                </div>
                            </div>
                        </div>
                        
                        <div class="card-footer">
                           <div class="form-group">
                                <button class="btn btn-principal btn-lg" id="guardar" type="submit">Guardar</button>
                            </div>
                        </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <script type="text/javascript" src="/public/js/index.js"></script>       
    </body>
</html>